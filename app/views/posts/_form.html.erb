<div class="section">
  <%= simple_form_for @post do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: 'mini' } } %>
      </div>
    </div>
    <%= f.button :submit, @post.persisted? ? 'Update' : 'Create', class: "button btn-primary" %>
  <% end %>
</div>
