<div class="row">
  <div class="col-md-12">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <%= f.input :query, autofocus: true, value: params[:query], required: false %>
      <%= f.submit 'Search' %>
    <% end %>
  </div>
</div>
</br>

<%= render @posts %>

<% unless @posts.any? %>
  <div>No posts found</div>
<% end %>
